<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nsd.pay">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.WithdrawlSuccessActivity"></activity>
        <activity android:name=".activity.TransferToWalletActivity" />
        <activity android:name=".activity.PayToActivity" />
        <activity android:name=".activity.ChooseTransferTypeActivity" />
        <activity android:name=".activity.SelectBankActivity" />
        <activity android:name=".activity.ContactTransferActivity" />
        <activity android:name=".activity.AddRemitterActivity" />
        <activity android:name=".activity.AddBeneficiaryActivity" />
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
    </application>

</manifest>