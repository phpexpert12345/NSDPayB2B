<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/sp_5"
    app:cardBackgroundColor="@color/light_too_green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_parant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/sp_8">

            <LinearLayout
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="5dp"
                android:background="@drawable/light_round_bg">

                <ImageView
                    android:id="@+id/img_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:padding="8dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/payments_icon" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="Deposit"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_10" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>