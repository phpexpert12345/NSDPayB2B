<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_parant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.PayToActivity">

    <include layout="@layout/common_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/sp_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/diemen_30dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/diemen_100dp"
                android:layout_height="@dimen/diemen_100dp"
                android:src="@drawable/payare"
                app:civ_border_color="@color/dark_green"
                app:civ_border_overlay="true"
                app:civ_border_width="@dimen/sp_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sp_10"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="A.K. Singh"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sp_3"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="+91 99 - 2568 ****"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/sp_10"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/sp_12"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center|start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="INR"
                        android:textColor="@color/dark_green"
                        android:textSize="@dimen/sp_18" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center|start">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/poppins_light"
                        android:hint="Enter the amount"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/sp_10"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/sp_12"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="Message"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/sp_12"
                    android:background="@null"
                    android:fontFamily="@font/poppins_light"
                    android:hint="(Optional)"
                    android:inputType="text"
                    android:textColor="@color/dark_green"
                    android:textColorHint="@color/dark_green"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/diemen_45dp"
            android:paddingLeft="@dimen/diemen_40dp"
            android:paddingRight="@dimen/diemen_40dp">

            <Button
                android:id="@+id/bt_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/diemen_40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/sp_1"
                android:background="@drawable/green_round_bg"
                android:fontFamily="@font/poppins_medium"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>