<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.CreatePasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/common_toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/sp_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/diemen_150dp"
                        android:layout_height="@dimen/diemen_150dp"
                        android:src="@drawable/signup_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sp_15"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="Create a password with 6 number to\nsafeguard your NSDPAY"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sp_5"
                        android:layout_marginTop="@dimen/sp_25"
                        android:layout_marginRight="@dimen/sp_5"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/sp_5"
                            android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter Password">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_light"
                                    android:inputType="textPassword"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_16" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="@dimen/sp_15"
                                android:layout_weight="0.2"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="end">

                                <ImageView
                                    android:id="@+id/show_hide_password_forgetPass"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="@dimen/sp_5"
                                    android:src="@mipmap/show_password48"
                                    app:tint="@color/black" />
                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sp_5"
                        android:layout_marginTop="@dimen/sp_25"
                        android:layout_marginRight="@dimen/sp_5"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/sp_5"
                            android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Re- Enter Password">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_re_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_light"
                                    android:inputType="textPassword"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_16" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="@dimen/sp_15"
                                android:layout_weight="0.2"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="end">

                                <ImageView
                                    android:id="@+id/show_hide_re_password_forgetPass"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="@dimen/sp_5"
                                    android:src="@mipmap/show_password48"
                                    app:tint="@color/black" />
                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sp_5"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="*Password does not match please type again"
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/diemen_50dp"
                    android:paddingLeft="@dimen/diemen_50dp"
                    android:paddingRight="@dimen/diemen_50dp">

                    <Button
                        android:id="@+id/bt_submit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/diemen_40dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/sp_1"
                        android:background="@drawable/green_round_bg"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Enter"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</LinearLayout>