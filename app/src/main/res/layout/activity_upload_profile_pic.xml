<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.informationUpdate.UploadProfilePicActivity">

    <include layout="@layout/common_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/diemen_30dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_user"
                android:layout_width="@dimen/diemen_250dp"
                android:layout_height="@dimen/diemen_250dp"
                android:src="@drawable/payare" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/diemen_35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="-153dp"
                android:layout_marginTop="@dimen/diemen_230dp"
                android:layout_marginBottom="@dimen/sp_1"
                android:layout_toRightOf="@+id/civ_user"
                android:background="@drawable/black_round_bg"
                android:fontFamily="@font/poppins_medium"
                android:text="Edit"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/diemen_120dp"
            android:paddingLeft="@dimen/diemen_50dp"
            android:paddingRight="@dimen/diemen_50dp">

            <Button
                android:id="@+id/bt_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/diemen_40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/sp_1"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/poppins_medium"
                android:text="Submit"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>