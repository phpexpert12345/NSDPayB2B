<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/green_3_color_rectangle_bg"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/diemen_150dp"
            android:layout_height="@dimen/diemen_120dp"
            android:background="@mipmap/logo_icon"
            android:gravity="center"
            android:orientation="vertical" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="105dp"
                android:background="@drawable/half_white_round_bg"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/diemen_110dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="Text1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tv_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sp_5"
                        android:fontFamily="@font/poppins_light"
                        android:gravity="center"
                        android:text="Text1"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp_5"
                    android:gravity="end"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="@dimen/diemen_50dp"
                        android:layout_height="@dimen/diemen_150dp"
                        android:background="@drawable/next_bg_icon"
                        android:gravity="end"
                        android:orientation="vertical" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="@dimen/sp_10"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="@dimen/diemen_200dp"
                    android:layout_height="@dimen/diemen_200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_3" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>