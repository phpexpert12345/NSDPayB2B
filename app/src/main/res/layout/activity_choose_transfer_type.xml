<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_parant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.ChooseTransferTypeActivity">

    <include layout="@layout/common_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="@dimen/diemen_0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/sp_15">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="Choose the form of money transfer"
                        android:textAllCaps="true"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp_15"
                    app:cardCornerRadius="@dimen/sp_3"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/sp_5">

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="@dimen/diemen_60dp"
                            android:layout_weight="0.2"
                            android:paddingTop="@dimen/sp_5"
                            android:paddingBottom="@dimen/sp_5"
                            android:gravity="start|center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/diemen_60dp"
                                android:layout_marginLeft="@dimen/sp_5"
                                android:background="@color/black"
                                android:src="@mipmap/logo_icon" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins_light"
                                android:gravity="center|start"
                                android:text="Transfer To NSD Pay Wallet"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/sp_16" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_arrow_forward"
                                    app:tint="@color/text_color" />
                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp_15"
                    app:cardCornerRadius="@dimen/sp_3"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/sp_5">

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="@dimen/diemen_60dp"
                            android:layout_weight="0.2"
                            android:gravity="start|center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/diemen_60dp"
                                android:layout_marginLeft="@dimen/sp_5"
                                android:src="@mipmap/sbi_icon" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins_light"
                                android:gravity="center|start"
                                android:text="Transfer To Domestic Bank"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/sp_16" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_arrow_forward"
                                    app:tint="@color/text_color" />
                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/sp_15"
                android:paddingTop="@dimen/sp_10"
                android:paddingRight="@dimen/sp_15"
                android:paddingBottom="@dimen/sp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center|start"
                    android:text="Recent History"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_light"
                        android:gravity="center|start"
                        android:text="Filter"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/sp_10"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/sp_20"
                            android:layout_height="@dimen/sp_20"
                            android:src="@mipmap/filter_icon" />
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/sp_15">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_recent_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>